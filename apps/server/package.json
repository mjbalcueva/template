{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.1",
		"zod": "^4.0.2",
		"@orpc/server": "^1.5.0",
		"@orpc/client": "^1.5.0",
		"express": "^5.1.0",
		"cors": "^2.8.5",
		"drizzle-orm": "^0.44.2",
		"pg": "^8.14.1",
		"better-auth": "^1.3.4"
	},
	"devDependencies": {
		"@workspace/eslint-config": "workspace:*",
		"@workspace/prettier-config": "workspace:*",
		"tsdown": "^0.12.9",
		"typescript": "^5.8.2",
		"@types/express": "^5.0.1",
		"@types/cors": "^2.8.17",
		"tsx": "^4.19.2",
		"@types/node": "^22.13.11",
		"drizzle-kit": "^0.31.2",
		"@types/pg": "^8.11.11"
	}
}
